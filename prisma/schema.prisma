generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model AIProvider {
  id           Int      @id @default(autoincrement())
  name         String
  provider     String   @unique
  apiKey       String
  defaultModel String
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
}

model ArgoServer {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  authType  String
  token     String?
  username  String?
  password  String?
  insecure  Boolean  @default(false)
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
}
